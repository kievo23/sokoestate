extends ../backendlayout
block content 
  // MAIN CONTENT
  .main-content
    .section__content.section__content--p30
      .container-fluid
        .row
          .col-md-12
            // DATA TABLE
            h3.title-5.m-b-35 Properties
            .table-data__tool
              .table-data__tool-left
                .rs-select2--light.rs-select2--md
                  select.js-select2(name='property')
                    option(selected='selected') All Properties
                    option(value='') Option 1
                    option(value='') Option 2
                  .dropDownSelect2
                .rs-select2--light.rs-select2--sm
                  select.js-select2(name='time')
                    option(selected='selected') Today
                    option(value='') 3 Days
                    option(value='') 1 Week
                  .dropDownSelect2
                button.au-btn-filter
                  i.zmdi.zmdi-filter-list
                  | filters
              .table-data__tool-right
                a(href='/property/add')
                  button.au-btn.au-btn-icon.au-btn--green.au-btn--small
                    i.zmdi.zmdi-plus
                    | add Property
                
                .rs-select2--dark.rs-select2--sm.rs-select2--dark2
                  select.js-select2(name='type')
                    option(selected='selected') Export
                    option(value='') Option 1
                    option(value='') Option 2
                  .dropDownSelect2
            .table-responsive.table-responsive-data2
              table.table.table-data2
                thead
                  tr
                    th
                      label.au-checkbox
                        input(type='checkbox')
                        span.au-checkmark
                    th NAME
                    th PHONE
                    th EMAIL
                    th ROLE
                    th Google
                    th Facebook
                    th ACTIONS
                tbody
                  if(users)
                    each user, i in users
                      tr.tr-shadow
                        td
                          =i+1
                          label.au-checkbox
                            input(type='checkbox')
                            span.au-checkmark
                        td 
                          =user.names
                        td 
                          =user.phone
                        td
                          span.status--process 
                            =user.email                                     
                        td
                          span.status--process 
                            =user.role
                        td
                          =user.googleId
                        td
                          =user.facebookid
                        td
                          .table-data-feature
                            a(href="/admin/user/"+user.username, title="see businesses")
                              button.item(data-toggle='tooltip' data-placement='top' title='Order')
                                i.zmdi.zmdi-mail-send
                            a(href="/admin/user/makeadmin/"+user.id, title="Make admin")
                              button.item(data-toggle='tooltip' data-placement='top' title='Edit')
                                i.zmdi.zmdi-edit
                            a(href="/admin/user/delete/"+user.id, title="Delete User")
                              button.item(data-toggle='tooltip' data-placement='top' title='Delete')
                                i.zmdi.zmdi-delete
                        
                    tr.spacer
                    
                      

  //.row
    .col-md-12.col-lg-12.col-sm-12.dash-padding
      .white-box
        //.col-md-3.col-sm-4.col-xs-6.pull-right
          select.form-control.pull-right.row.b-none
            option March 2017
            option April 2017
            option May 2017
            option June 2017
            option July 2017
        h3.box-title.text-center Businesses
        .table-responsive
          table.table
            thead
              tr
                th #
                th NAME
                th PHONE
                th EMAIL
                th ROLE
                th Google
                th Facebook
                th ACTIONS
            tbody
              each user, i in users
                tr
                  td
                    =i
                  td 
                    =user.names
                  td.txt-oflo 
                    =user.phone
                  td
                    span.text-success
                      =user.email
                  td
                    span.text-success
                      =user.role
                  td
                    =user.googleId
                  td
                    =user.facebookid
                  td
                    span.text-success
                      a(href="/admin/user/"+user.username, title="see businesses")
                        i.fa.fa-eye.fa-fw(aria-hidden='true')   
                    span.text-primary
                      a(href="/admin/user/makeadmin/"+user.id, title="Make admin")
                        i.fa.fa-user-secret.fa-fw(aria-hidden='true')   
                    span.text-danger
                      a(href="/admin/user/delete/"+user.id, title="Delete User")
                        i.fa.fa-trash.fa-fw(aria-hidden='true')
