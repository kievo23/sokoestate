extends ../backendlayout
block content 
  // MAIN CONTENT
  .main-content
    .section__content.section__content--p30
      .container-fluid
        .row
          .col-md-12
            // DATA TABLE
            h3.title-5.m-b-35 Properties
            .table-data__tool
              .table-data__tool-left
                .rs-select2--light.rs-select2--md
                  select.js-select2(name='property')
                    option(selected='selected') All Properties
                    option(value='') Option 1
                    option(value='') Option 2
                  .dropDownSelect2
                .rs-select2--light.rs-select2--sm
                  select.js-select2(name='time')
                    option(selected='selected') Today
                    option(value='') 3 Days
                    option(value='') 1 Week
                  .dropDownSelect2
                button.au-btn-filter
                  i.zmdi.zmdi-filter-list
                  | filters
              .table-data__tool-right
                a(href='/property/add')
                  button.au-btn.au-btn-icon.au-btn--green.au-btn--small
                    i.zmdi.zmdi-plus
                    | add Property
                
                .rs-select2--dark.rs-select2--sm.rs-select2--dark2
                  select.js-select2(name='type')
                    option(selected='selected') Export
                    option(value='') Option 1
                    option(value='') Option 2
                  .dropDownSelect2
            .table-responsive.table-responsive-data2
              table.table.table-data2
                thead
                  tr
                    th NO.
                    th NAMES
                    th PHONE
                    th EMAIL
                    th ROLE
                    th ACTIONS
                    th GOOGLE ID
                    th FACEBOOK ID
                tbody
                  if(users)
                    each user, i in users
                      tr.tr-shadow
                        td
                          =i+1
                        td 
                          =user.names
                        td 
                          =user.phone
                        td 
                          =user.email
                        td
                          span.status--process 
                            =user.role
                        td
                          .table-data-feature
                            a(href="/users/makeadmin/"+user.id, title="Make admin")
                              button.item(data-toggle='tooltip' data-placement='top' title='Make Admin')
                                i.zmdi.zmdi-account-box
                            a(href="/users/delete/"+user.id, title="Delete User")
                              button.item(data-toggle='tooltip' data-placement='top' title='Delete')
                                i.zmdi.zmdi-delete
                        td
                          =user.googleId
                        td
                          =user.facebookid
                    tr.spacer
