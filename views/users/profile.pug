extends ../backendlayout
block content
  // MAIN CONTENT
  .main-content
    .section__content.section__content--p30
      .container-fluid
        .row
          .container-fluid
            // MAIN CONTENT
            .main-content
              .section__content.section__content--p30
                p
                  strong Your Name: 
                  if(user.names) 
                    =user.names
                  else
                      | N/A
                p 
                  strong Phone Number: 
                  if(user.phone)   
                    =user.phone
                  else
                    | N/A
                
                p 
                  strong Email Address: 
                  if(user.email) 
                    =user.email
                  else
                    | N/A
                
                
                p
                  a(href='/users/editprofile')
                    Strong
                      span.fa.fa-pencil   
                      |    Edit Profile
                p
                  a(href='/users/changepassword')
                    Strong
                      span.fa.fa-lock    
                      |    Change Password
                
