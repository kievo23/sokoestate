extends ../backendlayout
block content
  // MAIN CONTENT
  .main-content
    .section__content.section__content--p30
      .container-fluid
        .row
          .container-fluid
            // MAIN CONTENT
            .main-content(style="padding-top: 50px;")
              .section__content.section__content--p30
                .row
                   .col-md-12
                      aside.profile-nav.alt
                        section.card
                          .card-header.user-header.alt.bg-dark
                            .media
                              a(href='#')
                                img.align-self-center.rounded-circle.mr-3(src='/uploads/thumbs/users/'+user.photouser, style='width:85px; height:85px;', alt='' )
                              .media-body
                                if user.name
                                  h2.text-light.display-6 
                                    =user.name
                          ul.list-group.list-group-flush
                            li.list-group-item
                              .row
                                .col-md-12
                                  if user.email 
                                    i.fa.fa-envelope-o           
                                      =user.email
                                  if user.phones
                                    each phon in user.phones
                                      i.fa.fa-tasks           
                                        =user.phone
                                  if user.organization
                                    i.fa.fa-tasks             
                                      =user.organization

                              
                            li.list-group-item
                              .row
                                .col-md-12
                                  if user.twitter 
                                    i.fa.fa-twitter                  
                                      =user.twitter
                                  if user.facebook
                                    i.fa.fa-facebook                         
                                      =user.facebook
                                  if user.instagram
                                    i.fa.fa-instagram                      
                                      =user.instagram
                                
                            li.list-group-item
                              a(href='/users/editprofile')  
                                span.badge.badge-success.pull-right 
                                  Strong
                                    span.fa.fa-book           
                                    |    Edit Profile
                            li.list-group-item
                              a(href='/users/changepassword') 
                                span.badge.badge-warning.pull-right.r-activity
                                  Strong
                                    span.fa.fa-lock              
                                    |    Change Password
              
                    
                
        
        
