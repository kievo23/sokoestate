extends ../layout

block content
  .content-area.submit-property(style='background-color: #FCFCFC;')
    .container
      .clearfix
        .wizard-container
          #wizardProperty.wizard-card.ct-wizard-orange
            form(action='/property/add' method='post',enctype="multipart/form-data")
                .wizard-header
                   h3
                        b Submit
                        |  YOUR PROPERTY 
                        br
                        
                ul.nav.nav-pills(role="tablist")
                    li.active(style="width:25%")
                        a(href='#step1' role="tab" data-toggle='tab') Step 1 
                    li(style="width:25%")
                        a(href='#step2' role="tab" data-toggle='tab') Step 2 
                    li(style="width:25%")
                        a(href='#step3' role="tab" data-toggle='tab') Step 3 
                    li(style="width:25%")
                        a(href='#step4' role="tab" data-toggle='tab') Finished 
                .tab-content
                    #step1.tab-pane.active
                        .row.p-b-15
                            h4.info-text  Let&apos;s start with the basic information
                            .col-sm-4.col-sm-offset-1
                                label
                                   | Property Image
                                .picture-container
                                    .picture
                                        img#wizardPicturePreview.picture-src(src='/assets/img/default-property.jpg' title='')
                                        input#wizard-picture(type='file',name='photo')
                            .col-sm-6
                                .form-group
                                    label
                                        | Property name 
                                        small (required)
                                    input.form-control(name='propertyname' type='text' placeholder='Super villa ...' required)
                                .form-group
                                    label
                                        | Property price 
                                        small (required)
                                    input.form-control(name='propertyprice' type='text' placeholder='3330000' required)
                                .form-group
                                    label
                                        | Telephone (Format: +254 756 354 976)
                                        small (required)
                                    input.form-control(name='phone' type='text' placeholder='+1 473 843 7436' required)
                    // End step 1
                    #step2.tab-pane
                        h4.info-text  How beautiful is your property?
                        .row
                            .col-sm-12
                                .col-sm-12
                                    .form-group
                                        label Property Description :
                                        textarea.form-control(name='description')
                            .col-sm-12
                                .col-sm-3
                                    .form-group
                                        label Property County :
                                        select#lunchBegins.selectpicker(name="county",data-live-search='true' data-live-search-style='begins' title='Select your city' required)
                                            option(value='nairobi') Nairobi
                                .col-sm-3
                                    .form-group
                                        label Property Surburb :
                                        input.form-control(name='surburb' type='text' placeholder='Ruiru ...' required, name="surburb")
                                .col-sm-3
                                    .form-group
                                        label Listing type  :
                                        select#basic.selectpicker.show-tick.form-control(name='type' required, name="type")
                                            option  -Status- 
                                            option(value='rent') Rent 
                                            option(value='sale')  Buy
                                .col-sm-1
                                    .form-group
                                        label Unit:
                                        select#basic.selectpicker.show-tick.form-control(required)
                                            option(value='acres') Acres
                                            option(value='hectares')  Hectares
                                            option(value='squaremeters')  Square Meters
                                            option(value='squarefeet')  Square Feet
                                            option(value='perches')  Perches

                                .col-sm-2
                                    .form-group
                                        label(for='price-range') Size :
                                        input#size.span2(type='number' value='1', name="size" )
                                        br
                            .col-sm-12.padding-top-15
                                .col-sm-3
                                    .form-group
                                        label Category :
                                        select#cat.selectpicker.cat(data-live-search='true' data-live-search-style='begins' title='Select property category',name="category")
                                            option | --Select Category--
                                            each category in categories
                                              option(data-icon='fa '+category.icon, value=category.id,rel=) 
                                                =category.name
                                .col-sm-3
                                    .form-group
                                        label Subcategory :
                                        select#subcat.selectpicker.form-control.subcat(name='subcategory',data-live-search="true",multiple)
                                          option(data-icon='glyphicon-wrench', value='') -- Select Sub-Category --
                                .col-sm-3
                                    .form-group
                                        label(for='property-geo') Bedrooms:
                                        input#bed.span2(type='number' value='1')
                                        br
                                .col-sm-3
                                    .form-group
                                        label(for='price-range') Bathrooms :
                                        input#baths.span2(type='number' value='1' )
                                        br
                                
                            .col-sm-12.padding-top-15
                                .form-group
                                    label(for='property-geo') Property geo :
                                    input#property-geo.span2(type='text' value='' data-slider-min='0' data-slider-max='600' data-slider-step='5' data-slider-value='[50,450]')
                                    br
                                    b.pull-left.color 40m
                                    b.pull-right.color 12000m
                            .col-sm-12.padding-top-15
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="swimming pool")
                                                |  Swimming Pool
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="CCTV")
                                                |  CCTV
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Emergency Exit")
                                                |  Emergency Exit
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Fire Place")
                                                |  Fire Place
                            .col-sm-12.padding-bottom-15
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Laundry Room")
                                                |  Laundry Room
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Jog Path")
                                                |  Jog Path
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Furnished")
                                                |  Furnished
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Serviced")
                                                |  Serviced
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Play Ground")
                                                |  Play Ground
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Packing")
                                                |  Packing
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Garden")
                                                |  Garden
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Gym")
                                                |  Gym
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Generator")
                                                |  Generator
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Borehole")
                                                |  Borehole
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Solar Panel")
                                                |  Solar Panel
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Club")
                                                |  Club
                            br
                    // End step 2
                    #step3.tab-pane
                        h4.info-text Give us some images and videos ? 
                        .row
                            .col-sm-6
                                .form-group
                                    label(for='property-images') Chose Images :
                                    input#property-images.form-control(type='file', name='gallery', placeholder='gallery', multiple='')
                                    p.help-block Select multiple images for your property .
                            .col-sm-6
                                .form-group
                                    label(for='property-video') Property video :
                                    input.form-control(value='' placeholder='http://www.youtube.com, http://vimeo.com' name='property_video' type='text')
                                .form-group
                                    input.form-control(value='' placeholder='http://www.youtube.com, http://vimeo.com' name='property_video' type='text')
                                .form-group
                                    input.form-control(value='' placeholder='http://www.youtube.com, http://vimeo.com' name='property_video' type='text')
                    // End step 3
                    #step4.tab-pane
                      h4.info-text  Finished and submit 
                        .row
                          .col-sm-12
                            div
                                p
                                    label
                                        strong Terms and Conditions
                                    |                                                         By accessing or using  SOKO ESTATE services, such as
                                    |                                                         posting your property advertisement with your personal
                                    |                                                         information on our website you agree to the
                                    |                                                         collection, use and disclosure of your personal information
                                    |                                                         in the legal proper manner
                                .checkbox
                                    label
                                        input(type='checkbox')
                                        strong Accept terms and conditions.
                    // End step 4
                .wizard-footer
                    .pull-right
                        input.btn.btn-next.btn-primary(type='button' name='next' value='Next')
                        input.btn.btn-finish.btn-primary(type='submit' name='finish' value='Finish')
                    .pull-left
                        input.btn.btn-previous.btn-default(type='button' name='previous' value='Previous')
                    .clearfix
