extends ../layout

block content    
    
    // property area
    .content-area.single-property(style='background-color: #FCFCFC;')
        .container
            .clearfix.padding-top-40
                .col-md-8.single-property-content
                    .row
                        .nav
                            if(property)
                              | #{property.category.name}  |
                              span 
                              if(property.subcategory)
                                | #{property.subcategory}  
                              
                               
                    .row
                        .single-property-header
                            if(property)
                                h1.property-title.pull-left 
                                  =property.name
                                span.property-price.pull-right 
                                    if property.enquiry==true
                                        table#price-property
                                            table.table(style="margin-bottom: 0px;")
                                                tr
                                                    td
                                                       small(style='color:#04045a') Price on Enquiry
                                    else 
                                        table#price-property.table(style="margin-bottom: 0px;")
                                            tr
                                                td #{property.price}
                                 
                                 
                                        
                        .light-slide-item
                            .clearfix
                                .favorite-and-print
                                    a(href="#" title="Love it" class="btn btn-love btn-counter" rel=property._id, data-count="0")
                                      i.fa-2x.fa.fa-heart
                                    a.printer-icon(href='javascript:window.print()')
                                      i.fa.fa-print
                                ul#image-gallery.gallery.list-unstyled.cS-hidden
                                    if(property)
                                        li(data-thumb='/uploads/'+property.photo)
                                                img(src='/uploads/'+property.photo, style='width: 100%; height: 400px;')
                                        each image, i in property.gallery
                                            li(data-thumb='/uploads/'+image.filename)
                                                img(src='/uploads/'+image.filename, style='width: 100%; height: 400px;')
                                         
                                            //li(data-thumb='/'+image.path,style="length:50px; width:300px" )
                                                img(src='/'+image.path, style="length:300px; width:300px")
                                           
                                
                    .single-property-wrapper
                        .property-meta.entry-meta.clearfix
                            if(property)
                                .col-xs-3.col-sm-3.col-md-3.p-b-15
                                    span.property-info-icon.icon-tag
                                        svg(xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewbox='0 0 48 48')
                                        path.meta-icon(fill-rule='evenodd' clip-rule='evenodd' fill='#FFA500' d='M47.199 24.176l-23.552-23.392c-.504-.502-1.174-.778-1.897-.778l-19.087.09c-.236.003-.469.038-.696.1l-.251.1-.166.069c-.319.152-.564.321-.766.529-.497.502-.781 1.196-.778 1.907l.092 19.124c.003.711.283 1.385.795 1.901l23.549 23.389c.221.218.482.393.779.523l.224.092c.26.092.519.145.78.155l.121.009h.012c.239-.003.476-.037.693-.098l.195-.076.2-.084c.315-.145.573-.319.791-.539l18.976-19.214c.507-.511.785-1.188.781-1.908-.003-.72-.287-1.394-.795-1.899zm-35.198-9.17c-1.657 0-3-1.345-3-3 0-1.657 1.343-3 3-3 1.656 0 2.999 1.343 2.999 3 0 1.656-1.343 3-2.999 3z')
                                    span.property-info-entry
                                        span.property-info-label Status
                                        span.property-info-value
                                        b.property-info-unit #{property.type}
                                        span.property-info-value 
                                          
                            if(property.size)    
                                .col-xs-3.col-sm-3.col-md-3.p-b-15
                                    span.property-info.icon-area
                                        svg(xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewbox='0 0 48 48')
                                        path.meta-icon(fill='#FFA500' d='M46 16v-12c0-1.104-.896-2.001-2-2.001h-12c0-1.103-.896-1.999-2.002-1.999h-11.997c-1.105 0-2.001.896-2.001 1.999h-12c-1.104 0-2 .897-2 2.001v12c-1.104 0-2 .896-2 2v11.999c0 1.104.896 2 2 2v12.001c0 1.104.896 2 2 2h12c0 1.104.896 2 2.001 2h11.997c1.106 0 2.002-.896 2.002-2h12c1.104 0 2-.896 2-2v-12.001c1.104 0 2-.896 2-2v-11.999c0-1.104-.896-2-2-2zm-4.002 23.998c0 1.105-.895 2.002-2 2.002h-31.998c-1.105 0-2-.896-2-2.002v-31.999c0-1.104.895-1.999 2-1.999h31.998c1.105 0 2 .895 2 1.999v31.999zm-5.623-28.908c-.123-.051-.256-.078-.387-.078h-11.39c-.563 0-1.019.453-1.019 1.016 0 .562.456 1.017 1.019 1.017h8.935l-20.5 20.473v-8.926c0-.562-.455-1.017-1.018-1.017-.564 0-1.02.455-1.02 1.017v11.381c0 .562.455 1.016 1.02 1.016h11.39c.562 0 1.017-.454 1.017-1.016 0-.563-.455-1.019-1.017-1.019h-8.933l20.499-20.471v8.924c0 .563.452 1.018 1.018 1.018.561 0 1.016-.455 1.016-1.018v-11.379c0-.132-.025-.264-.076-.387-.107-.249-.304-.448-.554-.551z')
                                    span.property-info-entry
                                        span.property-info-label Area
                                        span.property-info-value
                                        b.property-info-unit #{property.size} #{property.units}
                            if(property.bedrooms)
                                .col-xs-3.col-sm-3.col-md-3.p-b-15
                                    span.property-info-icon.icon-bed
                                        svg(xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewbox='0 0 48 48')
                                        path.meta-icon(fill='#FFA500' d='M21 48.001h-19c-1.104 0-2-.896-2-2v-31c0-1.104.896-2 2-2h19c1.106 0 2 .896 2 2v31c0 1.104-.895 2-2 2zm0-37.001h-19c-1.104 0-2-.895-2-1.999v-7.001c0-1.104.896-2 2-2h19c1.106 0 2 .896 2 2v7.001c0 1.104-.895 1.999-2 1.999zm25 37.001h-19c-1.104 0-2-.896-2-2v-31c0-1.104.896-2 2-2h19c1.104 0 2 .896 2 2v31c0 1.104-.896 2-2 2zm0-37.001h-19c-1.104 0-2-.895-2-1.999v-7.001c0-1.104.896-2 2-2h19c1.104 0 2 .896 2 2v7.001c0 1.104-.896 1.999-2 1.999z')
                                    span.property-info-entry
                                        span.property-info-label Bedrooms
                                        span.property-info-value
                                        b.property-info-unit 
                                          =property.bedrooms
                            if(property.bathrooms)
                                .col-xs-3.col-sm-3.col-md-3.p-b-15
                                    span.property-info-icon.icon-bath
                                        svg(xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewbox='0 0 48 48')
                                        path.meta-icon(fill='#FFA500' d='M37.003 48.016h-4v-3.002h-18v3.002h-4.001v-3.699c-4.66-1.65-8.002-6.083-8.002-11.305v-4.003h-3v-3h48.006v3h-3.001v4.003c0 5.223-3.343 9.655-8.002 11.305v3.699zm-30.002-24.008h-4.001v-17.005s0-7.003 8.001-7.003h1.004c.236 0 7.995.061 7.995 8.003l5.001 4h-14l5-4-.001.01.001-.009s.938-4.001-3.999-4.001h-1s-4 0-4 3v17.005000000000003h-.001z')
                                    span.property-info-entry
                                        span.property-info-label Bathrooms
                                        span.property-info-value 
                                        b.property-info-unit
                                          =property.bathrooms
                                
                        // .property-meta
                        .section
                            if(property)
                                h4.s-property-title.text-left 
                                  strong Description
                                .s-property-content
                                    h6
                                     =property.tagline 
                                    p
                                     =property.description
                        if(property.amenities)    
                            .section.additional-details
                                h4.s-property-title.text-left
                                    strong Ammenities
                                .additional-details-list.clearfix
                                    each ammenity in property.amenities
                                        div
                                            span.col-xs-6.col-sm-6.col-md-3.add-d-entry
                                              i(data-icon='fa '+ammenity.icon) 
                                              =ammenity.name
                                    
                        // End description area
                        .section.additional-details
                           h4.s-property-title.text-left
                            strong Location
                           .form-group
                             fieldset.gllpLatlonPicker
                               .row
                                
                               .gllpMap(style="width: 100%; height: 300px;") Google Maps
                               input#lati.gllpLatitude(type='hidden',value=property.map.lati, name='lati')
                               input#long.gllpLongitude(type='hidden', value=property.map.long,name='long')
                               input#zoom.gllpZoom(type='hidden',value=property.map.zoom,name='zoom')
                        // End description area
                       
                        if(property.youtube)               
                            // End features area
                            .section.property-video
                                h4.s-property-title.text-left
                                    strong  Property Video
                                    iframe(width='100%' height='400' src=property.youtube)

                                    //.embed-responsive.embed-responsive-4by3
                                       iframe.embed-responsive-item(src=property.youtube , allowfullscreen)
                                    // End video area
                .col-md-4.p0
                    aside.sidebar.sidebar-property.blog-asside-right
                        .dealer-widget
                            .row
                                .col-xs-12
                                    h4
                                        | To     
                                        if(property.type == "sale")
                                            |    Buy    
                                        else
                                            |     Rent
                                        |    Contact: 
                            .dealer-content
                                .inner-wrapper
                                    if(property)
                                        .clear
                                            .row
                                                .col-xs-4.col-sm-4.dealer-face
                                                    if property.user_id.photouser
                                                        a(href='')
                                                            img(src='/uploads/thumbs/users/'+property.user_id.photouser)
                                                    else
                                                        a(href='')
                                                            img.img-circle(src='/assets/img/user.png')
                                                        
                                                .col-xs-8.col-sm-8
                                                    h5.dealer-name
                                                        strong      
                                                          =property.user_id.names
                                                        br
                                                        span 
                                                        =property.ownership
                                                    .dealer-social-media
                                                        if property.user_id.facebook
                                                          a.facebook(href="https://"+property.user_id.facebook, target='_blank')
                                                            i.fa.fa-facebook
                                                        if property.user_id.twitter
                                                            a.twitter(href="https://"+property.user_id.twitter, target='_blank')
                                                                i.fa.fa-twitter
                                                        if property.user_id.instagram
                                                            a.instagram(href="http://"+property.user_id.instagram, target='_blank' )
                                                                i.fa.fa-instagram
                                        .clear
                                            ul.dealer-contacts
                                                //li
                                                    i.pe-7s-map-marker.strong  
                                                    |  9089 your adress her
                                                li(style="color:#000;")
                                                    i.pe-7s-mail.strong  
                                                    a(href="mailto:"+property.email, style="color:#000;")
                                                      =property.email
                                                li(style="color:#000;")
                                                    i.pe-7s-call.strong  
                                                    a(href="tel:"+property.phone, style="color:#000;")
                                                      =property.phone
                                                if property.phones
                                                  each phone in property.phones
                                                    li(style="color:#000;")
                                                        i.pe-7s-call.strong  
                                                        a(href="tel:"+property.phone, style="color:#000;")          
                                                            =phone
                        .panel.panel-default.sidebar-menu.similar-property-wdg.wow.fadeInRight.animated
                            .panel-heading
                                h3.panel-title Similar Properties
                            .panel-body.recent-property-widget
                                ul
                                    each sim, i in similars
                                        if(i<6)
                                            .row(style="box-shadow: 0 2px 2px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(0,0,0,0.08); margin-bottom:1rem;")
                                              .col-md-3.col-sm-3.col-xs-3.blg-thumb.p0
                                                    a(href='/property/'+sim.slug)
                                                        img(src='/uploads/' +sim.photo style="width:80px; height:80px")
                                                        span.property-seeker
                                              .col-md-8.col-sm-8.col-xs-8.blg-entry
                                                .row
                                                    .col-md-12
                                                        h6
                                                            a(href='/property/'+sim.slug)
                                                            =sim.name
                                                        br
                                                        span.pull-left
                                                        small
                                                            i.fa.fa-map-marker(aria-hidden="true")
                                                            span 
                                                                =sim.surburb
                                                        
                                                    .col-md-12
                                                        span.property-price
                                                            if  sim.enquiry==true
                                                                table#price-property
                                                                    table.table(style="margin-bottom: 0px;")
                                                                        tr
                                                                            td Price on Enquiry
                                                                            
                                                            else 
                                                                table#price-property.table(style="margin-bottom: 0px;")
                                                                    tr
                                                                        td #{sim.price}
                                                    
                        //.panel.panel-default.sidebar-menu.wow.fadeInRight.animated
                            .panel-heading
                               h3.panel-title Ads her  
                            .panel-body.recent-property-widget
                               img(src='assets/img/ads.jpg')
                        .panel.panel-default.sidebar-menu.wow.fadeInRight.animated
                            .panel-heading
                               h3.panel-title Smart search
                            .panel-body.search-widget
                                form.form-inline(action='search',method='get')
                                    .row
                                        .col-md-12(style='padding-right: 0px; padding-left: 0px;')
                                            .btn-group(style='float: left; padding-left: 2rem;')
                                                each categ, i in categories
                                                    input(type="radio", id=categ.name, class="radio-custom", name="category",value=categ.id, rel=categ.slug style="display:none; position absolute")
                                                    label(for=categ.name, type="button", class="btn btn-primary btn-search")
                                                        =categ.name
                                    .row
                                        .col-xs-6(style="margin-top:1rem")
                                            .switch-field
                                                input#switch_left(type='radio' name='type' value='sale' checked='')
                                                label(for='switch_left' style="padding:0") For Sale
                                                input#switch_right(type='radio' name='type' value='rent')
                                                label(for='switch_right' style="padding:0") For Rent
                                        .col-xs-6(style="margin-top:1rem")
                                            select#lunchBegins.selectpicker(data-live-search='true' data-live-search-style='begins' title='Location', name="city")
                                                option New york, CA
                                                option Paris
                                                option Casablanca
                                                option Tokyo
                                                option Marraekch
                                                option kyoto , shibua
                                    
                                    .row
                                        .col-xs-6(style="margin-top:1rem")
                                            select#basic.show-tick.form-control(title='Select Property Subcategory',name="subcategory")
                                                option(class='status',value='') Property Category
                                                each cat in categories
                                                    each subcat in cat.subcategories
                                                        option(class='category iradio_square-yellow',value=subcat.name,rel=cat.name) 
                                                            =subcat.name
                                        .col-xs-6(style="margin-top:1rem")
                                            input(type="text" id="minprice" class="form-control" placeholder="Max Price",name="manprice")
                                        
                                    .row(class='others')
                                        .col-xs-8(style="margin-top:1rem")
                                        input(type="text" class="form-control" placeholder="Size",name="size")
                                                
                                        .col-xs-4(style="margin-top:1rem")
                                            select#basic.selectpicker.show-tick.form-control(data-live-search='true' data-live-search-style='begins')
                                                option  Acre
                                                option Hectares 
                                                option m2
                                                option SqF
                                    .row(class='residential')
                                        .col-xs-6(style="margin-top:1rem")
                                            input(type="text" class="form-control" placeholder="No.BEDROOMS",name="bedrooms")
                                            
                                        .col-xs-6(style="margin-top:1rem")
                                            input(type="text" class="form-control" placeholder="No.BATHROOMS",name="bathrooms")
                                    .row
                                        .col-xs-12(style="margin-top:1rem")
                                            a(href="#")
                                            button.btn.search-btn.hide-search.text-center(type='submit')
                                                i.fa.fa-search
                                                |     Search

    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC9MX39yDkMJn6rjWi6vt4Rens5u_cVBQE")
    script(type='text/javascript').
        $(document).ready(function () {

            $('#image-gallery').lightSlider({
                gallery: true,
                item: 1,
                thumbItem: 9,
                slideMargin: 0,
                speed: 700,
                auto: true,
                loop: true,
                onSliderLoad: function () {
                    $('#image-gallery').removeClass('cS-hidden');
                }
            });
        });
