extends ../layout

block content
  .content-area.submit-property(style='background-color: #FCFCFC;')
    .container
      .clearfix
        .wizard-container
          #wizardProperty.wizard-card.ct-wizard-orange
            form(action='/property/edit/'+property.id method='post',enctype="multipart/form-data")
              if(property)
                .wizard-header
                   h3
                        b Edit   
                           =property.name 
                        br
                        
                ul.nav.nav-pills(role="tablist")
                    li.active(style="width:25%")
                        a(href='#step1' role="tab" data-toggle='tab') Step 1 
                    li(style="width:25%")
                        a(href='#step2' role="tab" data-toggle='tab') Step 2 
                    li(style="width:25%")
                        a(href='#step3' role="tab" data-toggle='tab') Step 3 
                    li(style="width:25%")
                        a(href='#step4' role="tab" data-toggle='tab') Step 4 
                .tab-content
                    #step1.tab-pane.active
                        .row.p-b-15
                            h4.info-text  Let&apos;s start with the basic information
                            //.col-sm-4.col-sm-offset-1
                                label
                                   | Property Image
                                .picture-container
                                    .picture
                                        img#wizardPicturePreview.picture-src(src="/uploads/"+ property.photo title='')
                                        input#wizard-picture(type='file', name='photo')
                            .col-sm-12
                                .form-group
                                    label
                                        | Property name 
                                        small (required)
                                    input.form-control(name='propertyname' type='text' placeholder=property.name, value=property.name required)
                                .form-group
                                    label 
                                        | Listing type  :
                                        small (required)
                                    select#basic.selectpicker.show-tick.form-control(name='type' required)
                                        option(value=property.type) #{property.type}
                                        option(value='rent') Rent 
                                        option(value='sell')  Sale
                                .form-group
                                    label
                                        | Property price 
                                        small (required)
                                    input.form-control(name='propertyprice', type='text', placeholder=property.price, value=property.price, required)
                                .form-group
                                    label 
                                        | Property Ownership  :
                                        small (required)
                                    select#basic.selectpicker.show-tick.form-control(name='ownership' required)
                                        option(value=property.ownership) #{property.ownership}
                                        option(value='owner') Owner
                                        option(value='agent')  Agent
                                .form-group
                                    label
                                        | Email 
                                        small (required)
                                    input.form-control(name='email', type='text', placeholder=property.email, value=property.email, required)
                                .form-group
                                    label
                                        | Telephone (Format: +254 756 354 976)
                                        small (required)
                                    input.form-control(name='phone', type='text', placeholder=property.phone, value=property.phone, required)
                    // End step 1
                    #step2.tab-pane
                        h4.info-text  How beautiful is your property?
                        .row
                            .col-sm-12
                                .col-sm-12
                                    .form-group
                                        label Property Description :
                                        textarea.form-control(name='description' placeholder=property.description)
                            .col-sm-12
                                .col-sm-6
                                    .form-group
                                        label Property County :
                                        select#lunchBegins.selectpicker(name="county",data-live-search='true' data-live-search-style='begins' title='Select your city' required)
                                            option(value='nairobi') Nairobi
                                .col-sm-6
                                    .form-group
                                        label Property Surburb :
                                        input.form-control(name='surburb', type='text', placeholder=property.surburb, value=property.surburb, required)
                            if (property.size)
                                .col-sm-12    
                                    .col-sm-6
                                        .form-group
                                            label(for='price-range') Size :
                                            input#size.span2(type='number', name="size", value=property.size )
                                    .col-sm-6
                                        .form-group
                                            label Unit:
                                            select#basic.selectpicker.show-tick.form-control(required)
                                                option(value='acres') Acres
                                                option(value='hectares')  Hectares
                                                option(value='squaremeters')  Square Meters
                                                option(value='squarefeet')  Square Feet
                                                option(value='perches')  Perches
            
                                        br
                            .col-sm-12.padding-top-15
                                .col-sm-6
                                    .form-group
                                        label Property Category :
                                        select#cat.cat.form-control(data-live-search='true', data-live-search-style='begins', value=property.category ,name="category")
                                            option(value=property.category)
                                              =property.category
                                            each category in categories
                                              option(data-icon='fa '+category.icon, value=category.id, rel=category.slug) 
                                                =category.name
                                .col-sm-6
                                    .form-group
                                        label Subcategory :
                                        select#subcat.form-control.subcat.show-tick(name='subcategory',data-live-search="true",multiple)
                                          each category in categories
                                            each subcat in category.subcategories
                                              option(value=subcat.name, rel=category.name) 
                                                =subcat.name
                            .col-sm-12.padding-top-15
                                .col-sm-6
                                    .form-group
                                        label(for='property-geo') Bedrooms:
                                        input#bed.span2(type='number' value=property.bedrooms)
                                        br
                                .col-sm-6
                                    .form-group
                                        label(for='price-range') Bathrooms :
                                        input#baths.span2(type='number' value=property.bathrooms )
                                        br
                                
                            .col-sm-12.padding-top-15
                                .form-group
                                    label(for='property-geo') Property geo :
                                    .row 
                                        .form-group
                                          fieldset.gllpLatlonPicker
                                            .row
                                                .col-md-6
                                                input.gllpSearchField.form-control(type='text')
                                                .col-md-6
                                                input.gllpSearchButton.form-control.btn.btn-info(type='button', value='search', placeholder="search your city")
                                            .gllpMap(style="width: 100%; height: 300px;") Google Maps
                                            input#lati.gllpLatitude(type='hidden',value=property.map.lati, name='lati')
                                            input#long.gllpLongitude(type='hidden', value=property.map.long,name='long')
                                            input#zoom.gllpZoom(type='hidden',value=property.map.zoom,name='zoom')
                            .col-sm-12.padding-top-15
                                .col-md-10.col-md-offset-1.col-sm-12.text-center.page-title
                                    h5 
                                      strong
                                        | Select property ammenities if applicable
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="swimming pool")
                                                |  Swimming Pool
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="CCTV")
                                                |  CCTV
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Emergency Exit")
                                                |  Emergency Exit
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Fire Place")
                                                |  Fire Place
                            .col-sm-12.padding-bottom-15
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Laundry Room")
                                                |  Laundry Room
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Jog Path")
                                                |  Jog Path
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Furnished")
                                                |  Furnished
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Serviced")
                                                |  Serviced
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Play Ground")
                                                |  Play Ground
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Packing")
                                                |  Parking
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Garden")
                                                |  Garden
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Gym")
                                                |  Gym
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Generator")
                                                |  Generator
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Borehole")
                                                |  Borehole
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Solar Panel")
                                                |  Solar Panel
                                .col-sm-3
                                    .form-group
                                        .checkbox
                                            label
                                                input(type='checkbox', name='amenities[]',value="Club")
                                                |  Club
                            br
                    // End step 2
                    #step3.tab-pane
                        h4.info-text Give us some images and videos
                        .row
                            .col-sm-6
                                .form-group
                                    label
                                    | Click to edit cover image
                                    .picture-container
                                        .picture
                                            img#wizardPicturePreview.picture-src(src="/uploads/"+ property.photo title='')
                                            input#wizard-picture(type='file', name='photo')
                                .form-group
                                    label(for='property-images') Chose Images :
                                    input#property-images.form-control(type='file', name='gallery', placeholder='gallery', multiple)
                                    p.help-block Select multiple images for your property .
                            .col-sm-6
                                .form-group
                                    label(for='property-video') Property video :
                                    input.form-control(value='' placeholder='http://www.youtube.com, http://vimeo.com' name='property_video' type='text')
                                .form-group
                                    input.form-control(value='' placeholder='http://www.youtube.com, http://vimeo.com' name='property_video' type='text')
                                .form-group
                                    input.form-control(value='' placeholder='http://www.youtube.com, http://vimeo.com' name='property_video' type='text')
                    // End step 3
                    #step4.tab-pane
                      h4.info-text  Finished and submit
                        .row
                          .col-sm-12
                            div
                                p
                                    label
                                        strong Terms and Conditions
                                    |                                                         By accessing or using  SOKO ESTATE services, such as
                                    |                                                         posting your property advertisement with your personal
                                    |                                                         information on our website you agree to the
                                    |                                                         collection, use and disclosure of your personal information
                                    |                                                         in the legal proper manner
                                .checkbox
                                    label
                                        input(type='checkbox' required)
                                        strong Accept terms and conditions.
                    // End step 4
                .wizard-footer
                    .pull-right
                        input.btn.btn-next.btn-primary(type='button' name='next' value='Next')
                        input.btn.btn-finish.btn-primary(type='submit' name='finish' value='Finish')
                    .pull-left
                        input.btn.btn-previous.btn-default(type='button' name='previous' value='Previous')
                    .clearfix
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC9MX39yDkMJn6rjWi6vt4Rens5u_cVBQE")
