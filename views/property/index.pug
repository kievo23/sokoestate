extends ../backendlayout

block content 
  // MAIN CONTENT
  .main-content
    .section__content.section__content--p30
      .container-fluid
        .row
          .col-md-12
            // DATA TABLE
            h3.title-5.m-b-35 Properties
            .table-data__tool
              .table-data__tool-left
                .rs-select2--light.rs-select2--md
                  select.js-select2(name='property')
                    option(selected='selected') All Properties
                    option(value='') Option 1
                    option(value='') Option 2
                  .dropDownSelect2
                .rs-select2--light.rs-select2--sm
                  select.js-select2(name='time')
                    option(selected='selected') Today
                    option(value='') 3 Days
                    option(value='') 1 Week
                  .dropDownSelect2
                button.au-btn-filter
                  i.zmdi.zmdi-filter-list
                  | filters
              .table-data__tool-right
                a(href='/property/add')
                  button.au-btn.au-btn-icon.au-btn--green.au-btn--small
                    i.zmdi.zmdi-plus
                    | add Property
                
                .rs-select2--dark.rs-select2--sm.rs-select2--dark2
                  select.js-select2(name='type')
                    option(selected='selected') Export
                    option(value='') Option 1
                    option(value='') Option 2
                  .dropDownSelect2
            .table-responsive.table-responsive-data2
              table.table.table-data2
                thead
                  tr
                    
                    th NO.
                    th NAME
                    th PRICE
                    th PHOTO
                    th TYPE
                    th APPROVED
                    th FEATURED
                    th ACTIONS
                tbody
                  if(properties)
                    each property,i in properties
                      tr.tr-shadow
                        td
                          =i+1
                          
                        td 
                          a(href='/property/' +property.slug)
                            =property.name
                        td
                          span.status--process 
                            table#price-back.table
                              tr
                                td #{property.price}
                                                                
                        td
                          img(src='/uploads/' +property.photo)
                        td
                          =property.type
                        td
                          =property.approved
                        td
                          =property.featured
                        td
                          .table-data-feature
                            //a(href="/property/showhome/"+property.id, title="Show on home page")
                              button.item(data-toggle='tooltip' data-placement='top' title='Order')
                                i.zmdi.zmdi-mail-send
                            a(href="/property/approved/"+property.id, title="Approve property")
                              button.item(data-toggle='tooltip' data-placement='top' title='Approve')
                                i.zmdi.zmdi-check
                            a(href="/property/featured/"+property.id, title="Favourite property")
                              button.item(data-toggle='tooltip' data-placement='top' title='Featured')
                                i.zmdi.zmdi-star
                            a(href="/property/edit/"+property.id, title="Edit Property")
                              button.item(data-toggle='tooltip' data-placement='top' title='Edit')
                                i.zmdi.zmdi-edit
                            a(href="/property/delete/"+property.id, onclick="return confirm('Are you sure you want to delete this Property?')", title="Delete Category")
                              button.item(data-toggle='tooltip' data-placement='top' title='Delete')
                                i.zmdi.zmdi-delete
                        
                    tr.spacer
                    
                      
